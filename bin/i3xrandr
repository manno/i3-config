#!/bin/sh
export DISPLAY=:0

case "$1" in
  work)
    xrandr --output LVDS1 --off --output DP2 --left-of HDMI3 --auto --output HDMI3 --auto
    ;;

  single)
    # kill virtual and disable external
     xrandr --fb 1366x768 \
     --output HDMI2 --off \
     --output HDMI3 --off \
     --output DP2 --off   \
     --output LVDS1 --auto
    ;;
  home)
    xrandr --output LVDS1 --off --output HDMI3 --auto --output HDMI2 --left-of HDMI3 --auto
    ;;

esac

