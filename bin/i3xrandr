#!/bin/sh
exit 0
export DISPLAY=:0
xrandr --auto
#xrandr --output LVDS1 --right-of VGA1   
#xrandr --output LVDS1 --primary --auto --right-of HDMI2 --output HDMI2 --auto
#xrandr --output LVDS1 --right-of HDMI2   
#xrandr --output LVDS1 --left-of HDMI3 --auto --output HDMI3 --auto

if xrandr -q | egrep -q "(LVDS1|HDMI3|DP2) connected"; then 
  xrandr --output LVDS1 --off --output DP2 --auto --output HDMI3 --off
  xrandr --output LVDS1 --off --output DP2 --auto --output HDMI3 --right-of DP2 --auto
elsif xrandr | grep -q "HDMI2 connected"; then
  #xrandr --output LVDS1 --off --right-of HDMI2 --output HDMI2 --auto --primary
  xrandr --output LVDS1 --primary --auto --right-of HDMI2 --output HDMI2 --auto
fi

nitrogen --save --set-zoom-fill ~/.local/share/wallpaper.png
